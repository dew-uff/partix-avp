<mediadorxml.catalog.util.Catalog>
  <catalogName>Catalogo_Experimentos</catalogName>

  <!-- Consulta que verifica a cardinalidade do elemento em um documento.
        O caracter (#) deve ser substituído pelo nome do documento;
        O caracter (?) deve ser substituído pelo nome do elemento.
  -->
  <cardinalityQuery> let $elm := doc('#'%)/? return count($elm) </cardinalityQuery>
  <!-- O caracter # é substituído na classe Query pelo nome do documento.
  	   O caracter % é substituído por vírgula + nome da coleção caso seja um documento dentro de uma coleção.
  	   O caracter ? é substituído pelo caminho no documento xml até o elemento que se deseja consultar.
  	   Exemplo: let $elm := doc('dblpR.xml','dblp')/dblp/inproceedings return count($elm) 
  -->
  
  
  <!-- Consulta que obtém os nomes dos documentos dentro de uma coleção, separando-os por vírgula.
       O caracter (?) deve ser substituído pelo nome da coleção a ser consultada.
  -->     
  <documentsQuery> for $c in doc('$documents')//collection[@name='?']/document/@name return concat( substring($c,1),',') </documentsQuery>
  
